#include <stdio.h>

int main() {
    int n,s;
    int sum = 0;
    printf("Enter a number : ");
    scanf("%d", &n);
    
    while(n != 0){
        s = n % 10;
        if(n % 2 == 0){
            sum = sum + s;
        }
        n = n / 10;
    }
    printf("Sum of even digits = %d", sum);
    
    return 0;
}
